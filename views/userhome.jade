//extends layout_userhome
extends layout

// this takes the user session from the login page 
// so it can be used on this page
- user = typeof(udata) != 'undefined' ? udata : {}
input(type = 'hidden',value = user._id)#userId

block content
	script(src="/javascript/randomGreeting.js")
	script(src="/javascript/snake.js")

	// Header Content //
	header(class="navbar navbar-inverse navbar-fixed-top")
		.navbar-inner
			.container
				a(class="btn btn-navbar", data-toggle="collapse", data-target=".nav-collapse")
					span(class="icon-bar")
					span(class="icon-bar")
					span(class="icon-bar")
				a(class="brand", href="/user/#{locals.udata.User_ID}") SmartClickR
				div(class="nav-collapse in collapse", style="height:auto;")
					ul(class="nav pull-right")
						li(class="active")
							a(id="home", href="/user/#{locals.udata.User_ID}") Home
						li
							a(id='account', href='/user/edit/#{locals.udata.User_ID}') Account
						li
							a(id='help', href='help-center') Help Center
						li
							a(id='logout',href='/logout') Log Out
	#main-content
	article#user_hero
		.container
			.span12
				section#user_greeting
					h2#user_hello.span5 
						return Hi, #{locals.udata.FirstName}
					// this type of call gets the desired info about the user
					//#{locals.udata.FirstName} 
					div.span6
						p#greeting.bubble
						.clear
					aside#actions_container.span12
						div#user_actions.span5
							a(id="create_button",href="/user/#{locals.udata.User_ID}/poll/create", class="big button red") Create a Poll
							.clear
						div#user_search.span6
							form.form-search
								input(id='search_polls', type='text', name='search', class='input-medium search-query', title='search your polls', placeholder="Search your Polls")
								button(id="search_polls_submit",class=" btn green", value="Go", type="submit") Search


							
								.clear
		hr
	section#content_container
		.container
			.row
				.span12					
					section#user_content
						if locals.pdata.length > 0
							each poll in locals.pdata
								div#poll_container
									form(class='pollActions', method='post')
										article#poll_brief.span9
											aside#sub_info
												a(href="#")
													span
													a(href="#")
														h1#poll_title #{poll.PollName}
														#date-time #{poll.CreateDate}
													.clear	
											span
												aside#sub_content
													p #{poll.PollDescription}
											h3 Session Code: #{poll.SessionCode}
										ul#alt-actions.span1
											li(id='edit_poll'+poll.Poll_ID)
												a(href="/user/#{locals.udata.User_ID}/poll/edit/#{poll.Poll_ID}", class="btn btn-medium btn-info") Edit
											li(id='delete_poll'+poll.Poll_ID)
												a(href="#deleteConfirm", role="button", class="btn btn-medium btn-info", data-toggle="modal") Delete

												// Delete Confirmation Modal //
												div(id="deleteConfirm", class="modal hide fade", tabindex="-1", role="dialog", aria-labelledby="deleteConfirmLabel", aria-hidden="true", style="text-align: left")
													div(class="modal-header")
														button(type="button", class="close", data-dismiss="modal", aria-hidden="true") &times;
														h5(id="deleteConfirmLabel") Are you sure you want to delete this poll?
													div(class="modal-footer")
														button(class="btn", data-dismiss="modal", aria-hidden="true") Cancel
														button(formmethod='POST', formaction='/user/#{locals.udata.User_ID}/poll/delete/#{poll.Poll_ID}', type='submit', class='btn btn-medium btn-danger') Delete
														
			
											li(id='start_poll'+poll.Poll_ID)
												a(href="#", class="btn btn-medium btn-info") Start
								
								hr
						else
							article#no_polls
								h2 You have not created any polls yet 
								a(href="/user/#{locals.udata.User_ID}/poll/create", id="sub_create", class="btn btn-info btn-large") Start Your First Poll
								span or read our 
									a(href="#") getting started guide
	// Footer Content //
	footer
		#footer_container.container
			.row-fluid
				#footer_content
					div.span3
						h5 About Us
						ul
							li: a(href='#') Home
							li: a(href='#') Features
							li: a(href='#') Sample Questions
					div.span3
						h5 Contact Us
						ul
							li: a(href='#') About The Team
							li: a(href='#') Blog
							li: a(href='#') Contact
					div.span3
						h5 Legal Stuff
						ul
							li: a(href='#') Privacy
							li: a(href='#') Terms Of Service
			.clear
		#legal
			span
				| Â©
				| SmartClickR Inc, All Rights Reserved



	
			