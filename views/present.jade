extends layout_present


block content
	body#landing-page
		// Header Content //
		header(class="navbar navbar-inverse navbar-fixed-top")
			.navbar-inner
				.container
					a(class="btn btn-navbar", data-toggle="collapse", data-target=".nav-collapse")
						span(class="icon-bar")
						span(class="icon-bar")
						span(class="icon-bar")
					a(class="brand", href="/") 
						| SmartClickR
						span  alpha
					div(class="nav-collapse")
						ul(class="nav pull-right")
							li(class="active")
								a(id="home", href="/") Home
							li
								a(id='signup', href='/user/create') Sign Up
							li
								a(id='log', href='/login') Log In
		.clear
		#landing-pad.hidden-phone
		#landing-container
			.container		
				.row-fluid					
					#hero_content
						h3 Question# #{locals.qdata[0].QuestionsOrder}
						h2 #{locals.qdata[0].Stem}
				.row-fluid
					.span6
						if locals.qdata[0].Question_ID != locals.QuestionIDs[0]
							a(id='starting-question', href='/user/#{locals.udata}/poll/#{locals.pdata}/question/present/#{locals.QuestionIDs[locals.qdata[0].QuestionsOrder - 2]}', class="btn btn-success btn-large") Previous
					.span6
						if locals.qdata[0].Question_ID == locals.QuestionIDs[locals.QuestionIDs.length - 1]
							a(id='starting-question', href='/user/#{locals.udata}/poll/#{locals.pdata}/present/final', class="btn btn-success btn-large") Completed
						else
							a(id='starting-question', href='/user/#{locals.udata}/poll/#{locals.pdata}/question/present/#{locals.QuestionIDs[locals.qdata[0].QuestionsOrder]}', class="btn btn-success btn-large") Next


	script
		var dataPath = '/user/' + #{locals.udata} + '/poll/' + #{locals.pdata} + '/question/' + #{locals.qdata[0].Question_ID} + '.json';
		d3.json(dataPath, function(json) { verticalBars(json); });